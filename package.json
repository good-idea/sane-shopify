{
	"name": "sane-shopify-monorepo-root",
	"private": true,
	"license": "MIT",
	"scripts": {
		"ncu": "lerna exec -- ncu",
		"ncu:u": "lerna exec -- ncu -u && lerna bootstrap",
		"test:coverage:send": "echo 'No tests yet, write some tests!'",
		"fix": "lerna run fix",
		"bootstrap": "lerna bootstrap",
		"typesync": "lerna exec -- typesync && lerna bootstrap",
		"test": "lerna run test",
		"build": "lerna run build",
		"watch": "lerna run --parallel watch",
		"release": "yarn build && lerna publish --yes"
	},
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"@commitlint/cli": "^8.3.5",
		"@commitlint/config-conventional": "^9.0.1",
		"@types/jest": "^25.2.1",
		"@types/node": "^13.11.1",
		"@typescript-eslint/eslint-plugin": "^2.28.0",
		"@typescript-eslint/parser": "^2.28.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-plugin-prettier": "^3.1.3",
		"eslint-plugin-react": "^7.19.0",
		"husky": "^4.2.5",
		"jest": "^25.3.0",
		"lerna": "^3.20.2",
		"markdown-toc": "^1.2.0",
		"nodemon": "^2.0.3",
		"npm-check-updates": "^4.1.2",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.0.4",
		"pretty-quick": "^2.0.1",
		"rimraf": "^3.0.2",
		"rollup": "^2.6.1",
		"rollup-plugin-ts-paths": "^1.0.5",
		"rollup-plugin-typescript2": "^0.27.0",
		"ts-jest": "^25.3.1",
		"typescript": "^3.8.3",
		"typesync": "^0.6.1",
		"yalc": "^1.0.0-pre.34"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "pretty-quick --staged"
		}
	},
	"dependencies": {}
}
